FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY examples/consumer/ ./examples/consumer/
COPY examples/shared/ ./examples/shared/

# Create logs and pacts directories
RUN mkdir -p logs pacts

# Set environment variables
ENV NODE_ENV=test
ENV PACT_BROKER_BASE_URL=http://localhost:9292

# Expose port (if needed for consumer service)
EXPOSE 3000

# Default command
CMD ["npm", "run", "test:simple"]
