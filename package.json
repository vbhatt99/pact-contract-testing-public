{
  "name": "pact-contract-testing",
  "version": "1.0.0",
  "description": "Comprehensive PACT-based contract testing framework from basic to advanced",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:single": "jest examples/consumer/__tests__/simpleUserService.pact.test.js",
    "test:consumer": "jest --testPathPattern=consumer",
    "test:provider": "jest --testPathPattern=provider",
    "test:contract": "npm run test:consumer && npm run test:provider",
    "test:ci:old": "npm run setup && npm run test:consumer",
    "test:working": "npm run test:consumer && npm run test:provider",
    "test:with-servers": "node scripts/run-tests-with-servers.js",
    "test:full": "npm run test:with-servers",
    "test:ci": "node scripts/run-ci-tests.js",
    "test:advanced": "jest --testPathPattern=advanced",
    "start:servers": "node scripts/start-servers.js",
    "setup": "mkdir -p logs pacts",
    "cleanup": "rm -rf logs/* pacts/*.json",
    "start:provider": "node examples/provider/server.js",
    "reports:generate": "node scripts/generate-reports.js",
    "reports:view": "node scripts/view-reports.js",
    "reports:list": "node scripts/list-reports.js"
  },
  "keywords": ["pact", "contract-testing", "microservices", "testing", "educational", "examples", "learning"],
  "author": "PACT Contract Testing Framework",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/pact-contract-testing.git"
  },
  "homepage": "https://github.com/example/pact-contract-testing#readme",
  "bugs": {
    "url": "https://github.com/example/pact-contract-testing/issues"
  },
  "dependencies": {
    "@pact-foundation/pact": "^13.0.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  }
}
